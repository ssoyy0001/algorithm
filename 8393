package algorithm;

import java.util.Scanner;

public class Main {
	public static void main(String args[]) {
		//n이 주어졌을 때, 1부터 n까지 합을 구하는 프로그램을 작성하시오.

		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		int result = 0;
		
		for(int i=0; i<num; i++) {
			result += i + 1;
		}
		System.out.println(result);
		
		sc.close();

	}
}
